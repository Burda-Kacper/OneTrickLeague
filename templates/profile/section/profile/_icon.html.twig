<div class="profile-image-container otl-glass anim-slide-in-up">
    <div class="profile-image-select-container">
        {% for availablePicture in availablePictures %}
            <div class="profile-image-select-entry" data-picture="{{ availablePicture.id }}">
                <img alt="Dostępne zdjęcie profilowe dla użytkownika"
                     src="{{ asset('img/profilePicture/' ~ availablePicture.image) }}"/>
                <div class="profile-image-select-description otl-glass">
                    {{ availablePicture.description }}
                </div>
                <div class="profile-image-select-description-mobile">
                    {{ availablePicture.description }}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
